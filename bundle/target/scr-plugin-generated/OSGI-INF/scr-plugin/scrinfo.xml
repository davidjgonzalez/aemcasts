<?xml version="1.0" encoding="UTF-8"?>
<components xmlns:scr="http://www.osgi.org/xmlns/scr/v1.0.0">
    <scr:component enabled="true" name="com.adobe.aemcasts.demo.impl.HelloServiceImpl">
        <implementation class="com.adobe.aemcasts.demo.impl.HelloServiceImpl"/>
        <service servicefactory="false">
            <provide interface="com.adobe.aemcasts.demo.HelloService"/>
        </service>
        <property name="service.pid" value="com.adobe.aemcasts.demo.impl.HelloServiceImpl" private="false"/>
        <reference name="repository" interface="org.apache.sling.jcr.api.SlingRepository" cardinality="1..1" policy="static" bind="bindRepository" unbind="unbindRepository" checked="true" strategy="event"/>
    </scr:component>
    <scr:component enabled="true" immediate="true" name="com.adobe.aemcasts.demo.impl.filters.LoggingFilter">
        <implementation class="com.adobe.aemcasts.demo.impl.filters.LoggingFilter"/>
        <service servicefactory="false">
            <provide interface="javax.servlet.Filter"/>
        </service>
        <property name="service.ranking" type="Integer" value="-700" private="false"/>
        <property name="sling.filter.scope" value="REQUEST" private="false"/>
        <property name="service.pid" value="com.adobe.aemcasts.demo.impl.filters.LoggingFilter" private="false"/>
    </scr:component>
</components>
